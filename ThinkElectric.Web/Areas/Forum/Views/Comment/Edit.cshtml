@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CommentEditViewModel

@{
    ViewBag.Title = "Edit Comment";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mt-4 mb-4">Edit Comment</h2>
            <form asp-area="Forum" asp-controller="Comment" asp-action="Edit" method="post">
                <div class="form-group">
                    <label asp-for="Content">Content:</label>
                    <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success btn-block mt-3">Apply changes</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}