@model IEnumerable<PostAllViewModel>
@{
    ViewBag.Title = "Forum";
}
<h2 class="text-center mt-5">@ViewBag.Title</h2>
<hr />
<div class="d-grid gap-2 mb-2 mt-3">
    <a asp-area="Forum" asp-controller="Post" asp-action="Create" class="btn btn-success">Add Post</a>
</div>
@if (Model.Any())
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-sm-6">
                <div class="card ">
                    <div class="card-body">
                        <h4 class="card-title text-center">@post.Title</h4>
                        <p class="card-text">@post.Content</p>
                        <div class="d-grid gap-2">
                            <a asp-area="" asp-controller="" asp-action="" asp-route-id="@post.Id" class="btn btn-warning">Edit</a>
                            <form class="mt-2" asp-area="" asp-controller="" asp-action="" asp-route-id="@post.Id">
                                <div class="d-grid gap-2">
                                    <input type="submit" value="Delete" class="btn btn-danger mb-2" onclick="return confirm('Are you sure you want to delete the post?')" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No posts yet!</p>
}