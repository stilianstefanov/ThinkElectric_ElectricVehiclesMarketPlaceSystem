{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=ThinkElectric;Integrated Security=true;TrustServerCertificate=True"
  },

  "ImageStoreDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "ImageStore",
    "ImagesCollectionName": "Images"
  },

  "Identity": {
    "Password": {
      "RequireDigit": true,
      "RequiredLength": 8,
      "RequireLowercase": true,
      "RequireNonAlphanumeric": true,
      "RequireUppercase": true
    },
    "SignIn": {
      "RequireConfirmedEmail": true
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}